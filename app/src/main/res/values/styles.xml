<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_24sp_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/my_black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="cornerRadius">38dp</item>
        <item name="backgroundTint">@color/button_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_cyr_medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="roboto_reg_16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.65</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Button_02" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_cyr_medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">29dp</item>
    </style>
    <style name="Steam_style" parent="Button_02">
        <item name="android:text">@string/Steam</item>
        <item name="backgroundTint">@color/Steam</item>
    </style>
    <style name="Origin_style" parent="Button_02">
        <item name="android:text">@string/Origin</item>
        <item name="backgroundTint">@color/Origin</item>
    </style>
    <style name="Epic_Games_style" parent="Button_02">
        <item name="android:text">@string/Epic</item>
        <item name="backgroundTint">@color/Epic</item>
    </style>
    <style name="GOG.com_style" parent="Button_02">
        <item name="android:text">@string/GOG</item>
        <item name="backgroundTint">@color/GOG</item>
    </style>
    <style name="Battle.net_style" parent="Button_02">
        <item name="android:text">@string/Battle</item>
        <item name="backgroundTint">@color/Battle</item>
    </style>
    <style name="XBOX_style" parent="Button_02">
        <item name="android:text">@string/XBOX</item>
        <item name="backgroundTint">@color/XBOX</item>
    </style>
    <style name="PS4_style" parent="Button_02">
        <item name="android:text">@string/PS4</item>
        <item name="backgroundTint">@color/PS4</item>
    </style>


</resources>